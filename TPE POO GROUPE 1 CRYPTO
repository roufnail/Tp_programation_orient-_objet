import java.util.Scanner;

class Point {
    private double x;
    private double y;
    
    public Point(double x, double y) {
        this.x = x;
        this.y = y;
    }
    
    public double getX() { return x; }
    public double getY() { return y; }
    
    public void translate(double dx, double dy) {
        x += dx;
        y += dy;
    }
    
    @Override
    public String toString() {
        return "(" + x + ", " + y + ")";
    }
    